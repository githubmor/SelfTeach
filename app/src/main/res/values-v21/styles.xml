<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/creditCardText</item>
        <item name="materialCardViewStyle">@style/MyCardView</item>
        <item name="circularProgressIndicatorStyle">@style/MyContentLoadingStyle</item>
    </style>

    <style name="MyCardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="MyContentLoadingStyle">
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/colorAccent</item>
    </style>

    <style name="creditCardText">
        <item name="fontFamily">@font/shab</item>
    </style>
</resources>