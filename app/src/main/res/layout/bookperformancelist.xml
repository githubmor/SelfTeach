<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/list_marginTop"
              android:background="@drawable/shadow"

        >
    <TextView
            android:id="@+id/tr"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/PerformanceTitle"/>

    <com.github.lzyzsd.circleprogress.DonutProgress
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:paddingBottom="4dp"
            android:layout_centerVertical="true"
            android:layout_below="@+id/tr"
            android:id="@+id/Book_performance"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginStart="@dimen/padding"
            custom:donut_unfinished_color="#ffcccccc"
            custom:donut_text_size="10sp"
            custom:donut_finished_stroke_width="5dp"
            custom:donut_unfinished_stroke_width="5dp"
            />


    <TextView
            android:id="@+id/booknam"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="8dp"
            android:text="@string/bookName"/>
    <TextView
            android:id="@+id/page_toRead_100percent"
            android:layout_height="wrap_content"
        android:layout_width="wrap_content"
            android:layout_below="@id/booknam"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/bookName"/>
    <TextView
            android:id="@+id/pageRemain"
            android:layout_height="wrap_content"
        android:layout_width="wrap_content"
            android:layout_below="@id/page_toRead_100percent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/bookName"/>
    <ProgressBar
            android:id="@+id/Book_pageRemindPercent"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:focusable="false"
            android:layout_below="@id/page_toRead_100percent"
            android:progressDrawable="@drawable/greenprogress"
            style="?android:attr/progressBarStyleHorizontal" />


</RelativeLayout>